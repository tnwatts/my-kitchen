<%- include('../partials/header') %>
<body class="container vh-100 text-center text-bg-dark">
    <div class="container invis-holder row">
    <div class="col rounded-3 recipe-form">
        <label for="" class="">Ingredients</label>
        <div class="row">
            <form action="/recipes/<%= recipe._id %>/updateIng/?_method=PUT" id="recipeIng" method="POST" class="input-group">
                <select class="form-select" aria-label="" aria-describedby="button-addon2" name="addIngredient">
                    <% ingredients.forEach(function(i, idx) { %>
                        <option value="<%= i.name %>"><%= i.name %> (<%= i.quantityType %>)</option>
                        <% }); %>
                    </select>
                <button class="btn btn-outline-secondary text-light" type="submit" target="recipeIng" id="button-addon2">Add</button>
            </form>
        </div>
        <div class="row">
            <div class="container-fluid"><% recipe.ingredients.forEach(function(i){ %>
                <%= i + ", " %> 
            <% }) %>
            </div>
        </div>
    </div>
    <form action="/recipes/<%= recipe._id %>?_method=PUT" id="" method="POST" class="col">
    <div class="container recipe-form rounded-4 col">
        <div class="row">
            <div class="col">
                <label for="exampleInputEmail1" class="form-label">Recipe Name</label>
                <input type="text" class="form-control" name="name" <%= recipe.name %> id="name" value="<%= recipe.name %>"></input>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="diet" class="form-label" id="">Diet Type</label>
                <select name="diet" class="form-control" id="">
                    <option value='Omnivore'<% if (recipe.diet === 'Omnivore'){ %> selected <% } %>>Omnivore</option>
                    <option value='Vegetarian'<% if (recipe.diet === 'Vegetarian'){ %> selected <% } %>>Vegetarian</option>
                    <option value='Vegan'<% if (recipe.diet === 'Vegan') { %> selected <% } %>>Vegan</option>
                </select>
            </div>
            <div class="col-sm">
                <label for="" class="form-label">Preparation Time</label>
                <input type="text" class="form-control col" name="preparationTime" value="<%= recipe.preparationTime %>" id="">
            </div>

        </div>
        <div class="row text-holder padding-3">
            <label class="form-label">Directions</label>
            
            <textarea class="form-control" rows="8" name="directions">
                <%= recipe.directions %>
            </textarea>
        </div>
        <div class="form-control recipe-form">
            <input type="submit" class="form-control" value="Submit Recipe">
        </div>
    </div>
  
</form>  
</div>
</body>


<%- include('../partials/footer') %>